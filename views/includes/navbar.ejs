<style>
#input-form {
  border-radius: 25px;
  padding: 0.6rem 1rem;
  width: 20rem;
  border: 1px solid #ccc;
  transition: all 0.3s ease;
}

#input-form:focus {
  outline: none;
  border-color: #fe4293;
  box-shadow: 0 0 5px rgba(35, 214, 92, 0.5);
}

.btn-search {
  background-color: #fe4293;
  color: white;
  border-radius: 25px;
  padding: 0.55rem 0.5rem;
  font-weight: 500;
 
  transition: all 0.3s ease;
}

.btn-search:hover {
  background-color: #fe42e2;
  color: white;
}

.btn-search i {
  margin-right: 0.5rem;
}

/* âœ… Responsive navbar styles */
@media (max-width: 768px) {
  .navbar-collapse {
    background-color: white;
    padding: 1rem;
    border-radius: 0.75rem;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
    z-index: 1000;
  }

  /* nav links aligned left */
  .navbar-nav {
    align-items: flex-start !important;
    text-align: left !important;
  }

  .navbar-nav .nav-link {
    color: #222 !important;
    width: 100%;
    padding: 0.6rem 0;
  }

  /* search form full width and stacked */
  #input-form {
    width: 100%;
    margin-bottom: 0.5rem;
  }

  .btn-search {
    width: 100%;
  }
}
@media (max-width: 768px) {
  #input-form {
    width: 12rem;
    padding: 0.45rem 0.8rem;
  }

  .btn-search {
    padding: 0.4rem 0.8rem;
    font-size: 0.9rem;
  }
}
</style>

<nav class="navbar navbar-expand-lg bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">

        <a class="nav-link" href="/listings">Explore</a>

      </div>

      <div class="navbar-nav ms-auto">
        <form class="d-flex" role="search">
          <input id="input-form" class="form-control me-2" type="search" placeholder="Search" aria-label="Search" />
          <button class="btn btn-search" type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
        </form>
      </div>
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Airbnb your home </a>

        <%if(!currUser){%>
          <a class="nav-link" href="/signup"><b>SignUp</b></a>
          <a class="nav-link" href="/login"><b>Login</b></a>
          <%}%>
            <%if(currUser){%>

              <a class="nav-link  " href="/logout"><b>
                  <%=currUser.username%>_Logout
                </b></a>



              <%}%>
      </div>
    </div>
  </div>
</nav>